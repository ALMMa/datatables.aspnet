{
    "webroot": "wwwroot",
    "version": "2.0.2",

    "dependencies": {
        "Microsoft.NETCore.App": {
            "version": "1.1.0",
            "type": "platform"
        },

        "DataTables.AspNet.Core": "2.0.2",
        "DataTables.AspNet.AspNetCore": "2.0.2",

        "Microsoft.AspNetCore.Diagnostics": "1.1.0",
        "Microsoft.AspNetCore.Mvc": "1.1.0",
        "Microsoft.AspNetCore.Mvc.TagHelpers": "1.1.0",

        "Microsoft.AspNetCore.Server.IISIntegration": "1.1.0",
        "Microsoft.AspNetCore.Server.Kestrel": "1.1.0",

        "Microsoft.AspNetCore.StaticFiles": "1.1.0",

        "Microsoft.AspNetCore.Razor": "1.1.0"
    },

    "tools": {
        "Microsoft.AspNetCore.Razor.Tools": { "version": "1.1.0-preview4-final" },
        "Microsoft.AspNetCore.Server.IISIntegration.Tools": { "version": "1.1.0-preview4-final" }
    },

    "frameworks": {
        "netcoreapp1.0": { }
    },

    "buildOptions": {
        "emitEntryPoint": true,
        "preserveCompilationContext": true
    },

    "runtimeOptions": {
        "gcServer": true
    },

    "publishOptions": {
        "include": [
            "wwwroot",
            "Views",
            "appsettings.json",
            "web.config"
        ]
    },

    "scripts": {
        "prepublish": [ "npm install", "bower install", "gulp clean", "gulp min" ],
        "postpublish": [ "dotnet publish-iis --publish-folder %publish:OutputPath% --framework %publish:FullTargetFramework%" ]
    }
}
